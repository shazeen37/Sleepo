<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".animal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRain3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2.5"
                android:elevation="10dp"
                android:text="Rain"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="#4C5538"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_baseline_grain_24"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/nature3_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="Nature"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="#4C5538"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_baseline_local_florist_24"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/animal3_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="Animal"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="#707E53"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_baseline_emoji_nature_24"
                app:iconSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/sea_id"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_cruelty_free_24"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Bobcat scream"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/forest_id"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_pets_24"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Koala sounds"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_pest_control_rodent_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="fox noises"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/ocean_id"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_pest_control_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Raven sound "
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_set_meal_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textViewq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Robin bird"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_outlet_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView2w"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Wolf howling"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_settings_accessibility_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView3r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="blackbird sound"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_smart_toy_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#4C5538"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView4t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sheep voice"
                        android:textColor="#FFFFFF" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>