<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".nature" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:elevation="10dp"
                android:text="Rain"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="#63429F"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_baseline_grain_24"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/nature_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="Nature"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="#8C72BA"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_baseline_local_florist_24"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/animal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="Animal"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="#63429F"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_baseline_emoji_nature_24"
                app:iconSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/sea_id"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_waves_24"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Creeks"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/forest_id"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_grass_24"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Forest"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_spa_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Leaves"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/ocean_id"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_pool_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Ocean"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_waves_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textViewq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Lake"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_nights_stay_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView2w"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Night"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_flare_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView3r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Desert"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableTop="@drawable/ic_baseline_pool_24"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textColor="#fff"
                        app:backgroundTint="#63429F"
                        app:cornerRadius="80dp" />

                    <TextView
                        android:id="@+id/textView4t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Waves"
                        android:textColor="#FFFFFF" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>